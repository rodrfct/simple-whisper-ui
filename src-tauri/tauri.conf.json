{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "simple-whisper-ui",
  "version": "0.1.0",
  "identifier": "com.simple-whisper-ui.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "simple-whisper-ui",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
